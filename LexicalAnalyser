#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp;
    char ch, word[20];
    int i, j = 0;

    char symbols[] = {'+', '-', '*', '/', '=', ';', '(', ')', '{', '}'};
    char keywords[][10] = {"int", "float", "char", "if", "else", "return", "for", "while", "main"};

    fp = fopen("test.t", "r");
    if (!fp) {
        printf("File not found!\n");
        return 0;
    }

    while ((ch = fgetc(fp)) != EOF) {
        // Check for symbols
        for (i = 0; i < 10; i++)
            if (ch == symbols[i])
                printf("Symbol: %c\n", ch);

        // Build words
        if ((ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z'))
            word[j++] = ch;
        else if (j > 0) {
            word[j] = '\0';
            j = 0;

            // Check for keywords
            int found = 0;
            for (i = 0; i < 9; i++) {
                if (strcmp(word, keywords[i]) == 0) {
                    printf("Keyword: %s\n", word);
                    found = 1;
                    break;
                }
            }

            if (!found)
                printf("Identifier: %s\n", word);
        }
    }

    fclose(fp);
    return 0;
}


int main() {
  int x = 5;
  float y = 2.5;
  x = x + y;
  return 0;
}
