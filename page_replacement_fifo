#include <stdio.h>

int main() {
    int frames[10], pages[30], temp[10];
    int total_frames, total_pages, faults = 0;
    int i, j, k = 0, flag;

    printf("Enter total number of frames: ");
    scanf("%d", &total_frames);

    printf("Enter total number of pages: ");
    scanf("%d", &total_pages);

    printf("Enter the reference string: ");
    for(i = 0; i < total_pages; i++)
        scanf("%d", &pages[i]);

    for(i = 0; i < total_frames; i++)
        frames[i] = -1;

    printf("\nPage\tFrames\t\tPage Fault\n");

    for(i = 0; i < total_pages; i++) {
        flag = 0;
        for(j = 0; j < total_frames; j++) {
            if(frames[j] == pages[i]) {
                flag = 1;
                break;
            }
        }

        if(flag == 0) {
            frames[k] = pages[i];
            k = (k + 1) % total_frames;
            faults++;
        }

        printf("%d\t", pages[i]);
        for(j = 0; j < total_frames; j++) {
            if(frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        if(flag == 0)
            printf("\tYes");
        else
            printf("\tNo");
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", faults);
    return 0;
}
